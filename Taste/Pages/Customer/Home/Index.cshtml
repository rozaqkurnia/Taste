@page
@model Taste.Pages.Customer.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}

@foreach(var category in Model.CategoryList)
{
    @if(Model.MenuItemList.Where(c=>c.CategoryId==category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success pl-1">@category.Name</h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach(var menuItem in Model.MenuItemList.Where(c=>c.CategoryId==category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #007BFF; border-radius: 5px;">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary">@menuItem.Name</h3>
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            <div class="col-6 badge badge-warning text-center text-black-50" style="font-size:14px;">
                                                @menuItem.Category.Name
                                            </div>
                                            <div class="col-6 text-right h4" style="color:maroon;">@menuItem.Price</div>
                                        </div>
                                        <img src="@menuItem.Image" style="width:230px;height:200px;" class="card-img-top p-2 rounded" />
                                        <a asp-page="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@menuItem.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
